<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ezzy"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ezzyicon" />

        <TextView
            android:id="@+id/lgin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="LOGIN"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/sans"/>

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/usericon"
            android:elevation="5dp"
            android:maxLines="1"
            android:hint="Email/Phone Number"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/psswrd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/lockicon"
            android:drawableRight="@drawable/eyeicon"
            android:elevation="5dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/lginbtton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_round"
            android:text="LOGIN"
            android:textStyle="bold"
            android:fontFamily="@font/sans"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/forgtpsswrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="forgot password?"
            android:textSize="18sp"
            android:textStyle="italic"
            app:fontFamily="@font/sans" />
        />

        <TextView
            android:id="@+id/noaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Don't have an account??"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:fontFamily="@font/sans"/>

        <TextView
            android:id="@+id/rgstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="REGISTER NOW"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/sans"/>
    </LinearLayout>
</RelativeLayout>
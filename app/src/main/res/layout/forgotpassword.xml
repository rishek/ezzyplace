<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="16dp">
    <ImageView
        android:id="@+id/Back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/stepback" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Back"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORGOT PASSWORD"
            android:textSize="30sp"
            android:fontFamily="@font/bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your phone number below and we'll help you recover your password."
            android:textSize="18sp"
            android:fontFamily="@font/bold"
            android:padding="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/phone"
            android:elevation="5dp"
            android:hint="Mobile"
            android:paddingLeft="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/green_button_round"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bolditalic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the email address associated with your account and we'll email you a link to reset your password."
            android:textSize="18sp"
            android:fontFamily="@font/bold"
            android:padding="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/email"
            android:hint="E-mail"
            android:elevation="5dp"
            android:paddingLeft="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18sp" />
















    </LinearLayout>

</RelativeLayout>
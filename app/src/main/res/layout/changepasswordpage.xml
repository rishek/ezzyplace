<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/Back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@drawable/stepback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Back"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="CHANGE PASSWORD"
            android:textSize="30sp" />

        <EditText
           android:id="@+id/currntpsswrd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/usericon"
            android:hint="Current password"
            android:elevation="5dp"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/newpsswrd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/lockicon"
            android:drawableRight="@drawable/eyeicon"
            android:hint="New Password"
            android:inputType="textPassword"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/retypenewpsswrd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text_round"
            android:drawableLeft="@drawable/email"
            android:hint="Re-type new password"
            android:elevation="5dp"
            android:paddingLeft="10dp" />

        <Button
           android:id="@+id/savechanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/green_button_round"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_round"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
           android:id="@+id/frgtpsswrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/bolditalic"
            android:text="Forgot Password?"
            android:textSize="20sp" />


    </LinearLayout>
</RelativeLayout>